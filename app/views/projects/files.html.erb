<%= link_to '<i class="glyphicon glyphicon-arrow-left"></i> Back'.html_safe, :back, {:style => 'color:#0079bf; font-size: 18px; font-weight: bold; font-family: "Ubuntu"'} %><br>
<br>
<% if current_user.is_manager?(@project.id) %>
  <%= form_for @project, :url => {:controller => :projects, :action => :add_files} do |form| %>
    <%= form.label "Add files", style: 'font-size: 18px; font-weight: bold; font-family: "Ubuntu"' %>
    <%= form.file_field :files, :multiple => true %>
    <p>
      <%= form.submit 'Submit', {class: "btn btn-info collapsed", :style => 'font-size: 14px; font-weight: bold; font-family: "Ubuntu"'} %>
    </p>
  <% end %>
<% end %>
<br><br>
<%= render 'attachments/file', attachments: @project.attachments%>
